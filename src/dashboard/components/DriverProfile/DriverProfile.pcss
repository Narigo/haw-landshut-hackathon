.driverProfile {
  display: block;
  position: absolute;
  border: solid 3px #c1c1c1;
  border-radius: 50%;
  overflow: hidden;
  width: 100px;
  height: 100px;

  & img {
    display: block;
    height: 100%;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }
}